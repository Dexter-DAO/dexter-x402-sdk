{
  "name": "@dexterai/x402",
  "version": "1.2.0",
  "description": "Chain-agnostic x402 v2 SDK for Solana, Base, and EVM payments",
  "author": "Dexter",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "echo 'Real payment tests require funded wallets. Run: npx tsx test/real-payment-solana.ts'",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.98.0",
    "tiktoken": "^1.0.22"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.0.0",
    "bs58": "^6.0.0",
    "ethers": "^6.13.0",
    "react": "^18.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-base": "^0.9.0",
    "react": "^18.0.0 || ^19.0.0",
    "viem": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@solana/wallet-adapter-base": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "viem": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "x402",
    "solana",
    "base",
    "evm",
    "ethereum",
    "payments",
    "dexter",
    "web3",
    "crypto"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dexter-DAO/dexter-x402-sdk"
  },
  "homepage": "https://dexter.cash/sdk",
  "bugs": {
    "url": "https://github.com/Dexter-DAO/dexter-x402-sdk/issues"
  }
}
